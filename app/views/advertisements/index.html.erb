<%=render 'head' %>

<div class="container fluid-height clearfix">

  <h2 class="heading">广告设置</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th>标题</th>
        <th>位置</th>
        <th>图片</th>
        <th>备注</th>
        <th>操作</th>
      </tr>
      </thead>

      <% @advertisements.each do |advertisement| %>
          <tr>
            <td width="30px"><i class="icon-bullhorn"></i></td>
            <td><%=  advertisement.title%></td>
            <td><%= advertisement.local %></td>
            <td><%= image_tag advertisement.avatar.url,width:'100' %></td>
            <td><%= advertisement.content %></td>
            <td width="100px" align="center"><%= link_to "", advertisement,  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
              <%= link_to '', advertisement, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
          </tr>
      <% end %>

    </table>

    <br>

    <%= link_to ' 添加广告', new_advertisement_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
  </div>
</div>