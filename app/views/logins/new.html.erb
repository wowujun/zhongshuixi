<body class="login1">
<!-- Login Screen -->
<div class="login1">
  <div class="login-wrapper">
    <div class="login-container">
      <div style="height: 50px;"></div>

      <div class="heading">
        <h1 style="color: #0088FF">zhongshuixi</h1>
      </div>

      <!--<form action="http://sharpandnimble.com/se7en/demo/index.html">-->
      <%= form_for(:login, url: logins_path) do |f| %>
          <div class="form-group">
            <!--<input class="form-control" placeholder="Username or Email" type="text">-->
            <%= f.text_field :name, class:"form-control", placeholder:"用户名" %>
          </div>
          <div class="form-group">
            <!--<input class="form-control" placeholder="Password" type="text">-->
            <%= f.password_field :password,class:"form-control", placeholder:"密码" %><%= f.submit(value="")  %>
            <!--<input type="submit" value="&#xf054;">-->
          </div>

      <% end %>
      <!--</form>-->
      <div style="height: 30px;"></div>
      <% if params[:id]== "0" %>
          <div class="alert alert-danger" style="vertical-align: middle;">
            <i class="icon-warning-sign icon-2x">&nbsp;</i>用户名或密码错误！
          </div>
      <% end %>

    </div>
  </div>
</div>
</body>

