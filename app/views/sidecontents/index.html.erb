<%=render 'head' %>

<div class="container fluid-height clearfix">

  <h2 class="heading">产品和文章设置</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th>分类</th>
        <th>标题</th>
        <th>摘要</th>
        <th>内容</th>
        <th>发布时间</th>
        <th>管理员</th>
        <th>操作</th>
      </tr>
      </thead>


      <% @sidecontents.each do |sidecontent| %>
          <tr>
            <td width="30px"><i class="icon-desktop"></i></td>

            <%@sidecla =@sideclas.find(sidecontent.sidecla_id) rescue nil %>
            <% if @sidecla %>
                <td class="hidden-xs"><%= @sidecla.title %></td>
            <% else %>
                <td class="hidden-xs">&nbsp;</td>
            <% end %>
            <td><%= sidecontent.title %></td>
            <td><%= sidecontent.inpaper %></td>
            <td><%= sidecontent.content %></td>
            <td><%= sidecontent.time.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <% @admin=@admins.find(sidecontent.admin_id) rescue nil %>
            <% if @admin %>
                <td class="hidden-xs"><%= @admin.name %></td>
            <% else %>
                <td class="hidden-xs">&nbsp;</td>
            <% end %>

            <td width="100px" align="center">
              <%= link_to '', sidecontent,  class:"icon-pencil usricons", title: "编辑",'data-no-turbolink'=>true %>&nbsp;&nbsp;
              <%= link_to '', sidecontent, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除",'data-no-turbolink'=>true %></td>
          </tr>
      <% end %>

    </table>

    <br>
    <%= link_to '创建前台信息', new_sidecontent_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true %>
  </div>
</div>
