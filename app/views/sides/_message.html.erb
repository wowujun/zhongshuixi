<body class="blog">
<div class="wrap">

  <div id="main">
    <!-- Title, Breadcrumb Start-->
    <div class="breadcrumb-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
            <h2 class="title">留言</h2>
          </div>
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
            <div class="breadcrumbs pull-right">
              <ul>
                <li>你所在位置:</li>
                <li><a href="index-2.html">首页</a></li>
                <li>留言</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Title, Breadcrumb End-->
    <!-- Main Content start-->
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12" id="contact-form">
            <h3 class="title">留言</h3>
            <p>
              Feel free to talk to our online representative at any time you please using our Live Chat system on our website or one of the below instant messaging programs.
            </p>
            <p>
              Please be patient while waiting for response. (24/7 Support!)
            </p>
            <div class="divider"></div>
            <%= form_for( @message ,html: { method: :new }) do |f| %>
                <fieldset>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                      <label>联系人: <span>*</span></label>
                      <%= f.text_field :name,class:"form-control" %>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                      <label>联系方式: <span>*</span></label>
                      <%= f.text_field :tel,class:"form-control" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <label>留言内容: <span>*</span></label>
                      <%= f.text_area :content,class:"form-control",rows:8%>
                    </div>
                  </div>
                  <p></p>
                  <%= f.submit :"提交" ,class:"btn-normal btn-color submit  bottom-pad"%>
                </fieldset>
            <%end%>
            <div class="success alert-success alert" style="display:none">Your message has been sent successfully.</div>
            <div class="error alert-error alert" style="display:none">E-mail must be valid and message must be longer than 100 characters.</div>
            <div class="clearfix">
            </div>

          </div>
          <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
            <div class="address widget">
              <% @cfgs.each do |cfg| %>
                  <h3 class="title">公司</h3>
                  <ul class="contact-us">
                    <li>
                      <i class="icon-map-marker"></i>
                      <p>
                        <strong>公司地址:</strong><%= cfg.address%>
                      </p>
                    </li>
                    <li>
                      <i class="icon-phone"></i>
                      <p>
                        <strong>联系电话:</strong> +<%= cfg.sale_tel%>
                      </p>
                    </li>
                    <li>
                      <i class="icon-envelope"></i>
                      <p>
                        <strong>邮箱:</strong><a href="mailto:info@fifothemes.com"><%= cfg.email%></a>
                      </p>
                    </li>
                  </ul>
              <%end%>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- Main Content end-->
  </div>
</div>
<!-- Wrap End -->
</body>
</div>